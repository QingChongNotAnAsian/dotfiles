ignores="LICENSE|.git|\.$|update_dotfiles"
dotfiles_dir=$(pwd)

if [ $dotfiles_dir = $HOME ]; then
	echo "Cannot be run from home direcotry, please run from within the git folder :-)"
	exit 1
fi

files=$(ls -a | grep -v -E $ignores)
echo "PWD: $dotfiles_dir"
echo "cd $HOME"
cd $HOME
for fn in $files; do
	echo "ln -sf $fn"
	ln -sf "$dotfiles_dir/$fn"
done
